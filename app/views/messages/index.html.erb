<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <span class="form-control" rows="2"><%= message.body %></span>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, class: "form-horizontal") do |f| %>
  <div class="form-graup">
    <label for="" class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-11">
      <%= f.text_field :name, :size => "20x10", class: "form-control"%>
    </div>
  </div>
  
  <div class="form-group">
   <label for="" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
     <%= f.text_area :body, class: "form-control" %>
     <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
<% end %>