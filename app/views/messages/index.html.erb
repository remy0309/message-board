<style>
panel-footer {
  margin: 50px;
}
</style>

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <span class="form-control" rows="2"><%= message.body %></span>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, html: { class: "form-horizontal" }) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前:</label>
     <div class="col-sm-11">
      <%= f.text_field :name, :size => "20x40" %>
     </div>
  </div>
  
  <div class="form-group">
   <label for="message_body" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
     <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>

 <div class="panel-footer" id="submit">
   Powered by TechAcademy
 </div>